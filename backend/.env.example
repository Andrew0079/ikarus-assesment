# Copy to .env and fill in values. Do not commit .env.

# Required: MSSQL connection (Docker: use host 'mssql', port 1433)
DATABASE_URL=mssql+pymssql://sa:YourPassword@localhost:1433/weatherapp

# Required in production: set a strong secret; rotate periodically
JWT_SECRET_KEY=change-me-in-production
JWT_ACCESS_TOKEN_EXPIRES=900

# Weather API (OpenWeatherMap). Optional: if unset, weather endpoints use cache only
OPENWEATHERMAP_API_KEY=

# CORS (comma-separated origins for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional
PORT=5000
LOG_LEVEL=INFO
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=60 per minute
RATELIMIT_AUTH=10 per minute
WEATHER_CACHE_TTL_MINUTES=20
